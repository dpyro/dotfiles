// Place your settings in this file to overwrite the default settings
{
    // Editor
    "editor.acceptSuggestionOnEnter": true,
    "editor.autoClosingBrackets": false,
    "editor.cursorBlinking": "smooth",
    "editor.dragAndDrop": true,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.scrollBeyondLastLine": false,

    // Miscellaneous
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "vscode-icons",
    "diffEditor.ignoreTrimWhitespace": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "telemetry.enableTelemetry": false,
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "path-intellisense.showHiddenFiles": true,
    "files.watcherExclude": {
        "**/node_modules/**": false
    },

    // File settings
    "files.associations": {
        ".pylintrc": "ini"
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },

    // Extensions
    "vsicons.dontShowNewVersionMessage": true,
    "vsicons.projectDetection.autoReload": true,

    // Languages
    "clang.cxxflags": [
        "-Wdeprecated-declarations"
    ],
    "julia.executablePath": "/Applications/Julia-0.5.app/Contents/Resources/julia/bin/julia",
    "python.autoComplete.extraPaths": ["/usr/local/Cellar/python3/3.6.0/Frameworks/Python.framework/Versions/3.6/lib/python3.6/site-packages"],
    "rust.useNewErrorFormat": true

}
